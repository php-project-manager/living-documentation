{
    "name": "php-project/living-documentation",
    "description": "Living Documentation",
    "type": "library",
    "license": "MIT",
    "bin": [
        "bin/documentor"
    ],
    "require": {
        "php": "^8.2",
        "beberlei/assert": "^3.3.2",
        "php-project/source-code": "dev-main",
        "php-project/test-suite": "dev-main",
        "php-project/fluent": "dev-main"
    },
    "suggest": {
        "symfony/console": "Use the documentation command"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13",
        "league/flysystem-memory": "^3.10",
        "mockery/mockery": "^1.5",
        "phpmetrics/phpmetrics": "^2.8",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpdoc-parser": "^1.14",
        "phpstan/phpstan": "^1.9.2",
        "phpstan/phpstan-beberlei-assert": "^1.0.1",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.4",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^1.2",
        "roave/security-advisories": "dev-latest",
        "sebastian/diff": "5.0 as 4.0.4",
        "symfony/console": "^6.2",
        "tomasvotruba/cognitive-complexity": "^0.0.5"
    },
    "config": {
        "platform": {
            "php": "8.2.1"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "PhpProject\\LivingDocumentation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpProject\\LivingDocumentation\\Tests\\": "tests/unit/",
            "PhpProject\\LivingDocumentation\\Tests\\Helper\\": "tests/helper/"
        }
    }
}
